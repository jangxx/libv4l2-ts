{
  "name": "libv4l2-ts",
  "version": "1.0.0",
  "description": "Native bindings for libv4l2",
  "main": "dist/index.js",
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "rm -r ./dist && npx tsc",
    "prepublishOnly": "rm -r ./dist && npx tsc",
    "script:check-struct-sizes": "node-gyp rebuild && ts-node ./scripts/check-struct-sizes.ts",
    "script:example": "node-gyp rebuild && ts-node ./scripts/example.ts",
    "script:example-nobuild": "node-gyp rebuild && ts-node ./scripts/example.ts"
  },
  "keywords": [
    "v4l2",
    "webcam",
    "linux",
    "native",
    "napi"
  ],
  "author": "jangxx <jangxx@pm.me>",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "ref-array-di": "^1.2.2",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1",
    "ref-union-di": "^1.0.1"
  },
  "os": [
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jangxx/node-v4l2-bindings.git"
  },
  "devDependencies": {
    "@types/ref-array-di": "^1.2.8",
    "@types/ref-napi": "^3.0.12",
    "@types/ref-struct-di": "^1.1.12",
    "@types/ref-union-di": "^1.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
